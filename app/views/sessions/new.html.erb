<%= form_tag login_post_path do %>
  <%= render partial: "invalid_login" if flash[:login_errors] %>
  <div class="input-group">
    <%= email_field_tag :email, params[:email] , class: "form-control" %>
    <!-- <input type="text" class="form-control" placeholder=""> -->
  </div>
  <div class="input-group">
    <%= password_field_tag :password, nil , class: "form-control" %>
    <!-- <input type="text" class="form-control" placeholder=""> -->
  </div>
  <button type="submit" class="btn btn-default submit-btn" id="submit-btn">Log In</button>
<% end %>
